<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="2px"
        android:background="@android:color/black">

        <timeout.slang.com.ui.views.ViewTOImage
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/img_lhs"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Medium Text"
            android:id="@+id/img_lhs_title"
            android:layout_alignBottom="@+id/img_lhs"
            android:padding="20dp"
            android:layout_alignLeft="@+id/img_lhs"
            android:layout_alignStart="@+id/img_lhs"
            android:layout_alignRight="@+id/img_lhs"
            android:layout_alignEnd="@+id/img_lhs"
            android:textAlignment="center"
            android:background="@drawable/img_gradient_bg"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="2px"
        android:background="@android:color/black">

        <timeout.slang.com.ui.views.ViewTOImage
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/img_rhs"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Medium Text"
            android:id="@+id/img_rhs_title"
            android:layout_alignBottom="@+id/img_rhs"
            android:padding="20dp"
            android:layout_alignLeft="@+id/img_rhs"
            android:layout_alignStart="@+id/img_rhs"
            android:layout_alignRight="@+id/img_rhs"
            android:layout_alignEnd="@+id/img_rhs"
            android:textAlignment="center"
            android:background="@drawable/img_gradient_bg"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true" />
    </RelativeLayout>
</LinearLayout>

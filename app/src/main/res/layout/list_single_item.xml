<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:clickable="true"
    android:padding="2px"
    android:background="@android:color/black">

    <timeout.slang.com.ui.views.ViewTOImage
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/single_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/img_title"
        android:layout_alignBottom="@+id/single_img"
        android:padding="20dp"
        android:layout_alignLeft="@+id/single_img"
        android:layout_alignStart="@+id/single_img"
        android:layout_alignRight="@+id/single_img"
        android:layout_alignEnd="@+id/single_img"
        android:textAlignment="center"
        android:background="@drawable/img_gradient_bg"
        android:textColor="@android:color/white"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true" />
</RelativeLayout>
